<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_vocabulary"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/imgDetailLargeVoca"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:contentDescription="@string/name_copy"
            app:srcCompat="@drawable/watermelon" />

        <TextView
            android:id="@+id/txtIpaDetailVoca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/font_main"
            android:textSize="20sp"
            android:text="@string/ipa" />

        <TextView
            android:id="@+id/txtWordDetailVoca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_main"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:text="@string/name_word" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgDetailVoca"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="14dp"
                android:contentDescription="@string/name_copy"
                app:srcCompat="@drawable/details" />

            <ImageView
                android:id="@+id/imgSoundVoca"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="72dp"
                android:contentDescription="@string/name_copy"
                app:srcCompat="@drawable/loa" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>